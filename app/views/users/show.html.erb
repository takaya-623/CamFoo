<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <%= attachment_image_tag @user, :account_image, :fill, 100, 100, fallback: "no_image.jpg"%><br>
      <%= current_user.acount%><br>
      <span>氏名: </span>
      <%= current_user.fullname%><br>
      <span>メールアドレス: </span>
      <%= current_user.email%><br>
      <i class="far fa-thumbs-up"></i>
      <span>いいね数</span>&emsp;
      <i class="fas fa-bookmark"></i>
      <span>お気に入り</span>
      <%= link_to edit_user_path(current_user) do %>
        <i class="fas fa-user-cog text-dark"></i>
        <span>編集</span>
      <% end %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>投稿履歴</h2>
    </div>
  </div>
  <div class="row">
  <% @cooks.each do |cook| %>
    <div class="col-3 offset-1">
        <%= cook.name %><br>
        <span>調理時間: <%= cook.cooking_time %>分</span><br>
        <%= link_to cook_path(cook) do %>
          <%= attachment_image_tag cook, :image, :fill, 150, 150 %>
        <% end %>
    </div>
  <% end %>
  </div>
</div>
