<% content_for(:title, 'ランキング | CanFoo') %>
<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>いいねランキング</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
  <% @ranks.each.with_index(1) do |cook, i| %>
    <div class="col-3 offset-1">
      <%= i %>位
      <div class="card shadow-lg">
        <%= link_to cook_path(cook) do %>
          <%= attachment_image_tag cook, :image, :fill, 200, 150, class:"card-img-top"; %>
        <% end %>
        <%= link_to user_path(cook.user) do %>
          <span class="account ml-2 mt-2">By <%= cook.user.account %></span>
        <% end %>
        <div class="card-body">
          <p class="card-title">◆<%= cook.name %></p>
          <p><%= cook.comment %></p>
          <div class="row border-top m-auto">
            <div class="col-6">
              <%= link_to user_path(cook.user) do %>
              <%= attachment_image_tag cook.user, :account_image, :fill, 50, 50, fallback: "no_image.jpg", class:" rounded-circle no-image"; %><br>
              <% end %>
            </div>
            <div class="col-5 offset-1 pt-3">
              <%= link_to "詳細", cook_path(cook), class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>