<div class="container">
  <div class="row">
  <% cooks.each do |cook| %>
    <div class="col-3 offset-1">
      <div class="card shadow-lg">
        <%= link_to cook_path(cook) do %>
          <%= attachment_image_tag cook, :image, class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <p class="card-title">◆<%= cook.name %></p>
          <span class="card-text">調理時間: <%= cook.cooking_time %>分</span>
          <p><%= cook.comment %></p>
          <div class="row border-top m-auto">
            <div class="col-6">
              <%= link_to user_path(cook.user) do %>
              <%= attachment_image_tag cook.user, :account_image, :fill, 50, 50, fallback: "no_image.jpg", class:" rounded-circle no-image"; %><br>
              <span class="account">By <%= cook.user.account %></span>
              <% end %>
            </div>
            <div class="col-5 offset-1 card-btn">
              <%= link_to "詳細", cook_path(cook), class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<%= paginate cooks %>