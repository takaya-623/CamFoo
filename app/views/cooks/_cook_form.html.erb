<div class="container">
  <div class="row">
    <div class="col-md-10 col-xs-12 offset-1">
      <%= render "cooks/shared/error" %>
      <div class="m-auto">
      <%= form_with model: cook, local: true do |f| %>
      <div class="form-group">
        <label for="inputName">◆料理名</label><br>
        <%= f.text_field :name %><br>
      </div>
      <div class="form-group">
        <label for="inputComment">◆特徴</label><br>
        <%= f.text_field :comment, class: "w-75"  %><br>
      </div>
      <div class="form-group">
        <label for="inputTime">◆調理時間</label><br>
        <%= f.text_field :cooking_time, size: 3 %><span>分</span><br>
      </div>
      <div class="form-group">
        <label for="inputGenre">◆ジャンル</label><br>
        <%= f.select :cook_genre, Cook.cook_genres_i18n.keys.map {|k| [I18n.t("enums.cook.cook_genre.#{k}"), k]}, { include_blank: '選択してください'} %><br>
      </div>
      <div class="form-group">
        <label for="inputItem">◆調理道具</label><br>
        <%= f.select :cook_item, Cook.cook_items_i18n.keys.map {|k| [I18n.t("enums.cook.cook_item.#{k}"), k]}, { include_blank: '選択してください'} %><br>
      </div>
      <div class="form-group">
        <label for="inputMaterial">◆材料 ※8種類上の場合は調理方法欄に記載</label><br>
          <%= f.fields_for :materials do |material_fields| %>
          <table class="table w-75">
            <tbody>
              <tr>
              <td>
                <%= material_fields.text_field :material, placeholder: "食材、調味料等", class: "mr-5" %>
                <%= material_fields.text_field :qty, placeholder: "分量" %>
              </td>
              </tr>
            </tbody>
          </table>
          <% end %><br>
        </div>
        <div class="form-group">
          <label for="inputMethod">◆調理方法</label><br>
          <%= f.text_area :cooking_method, size: "60x5", class: "w-100"  %><br>
        </div>
        <div class="form-group">
          <label for="inputImage">◆料理画像</label><br>
          <%= f.attachment_field :image %><br>
        </div>
          <%= f.submit "投稿する" %>
      <% end %>
      </div>
    </div>
  </div>
</div>