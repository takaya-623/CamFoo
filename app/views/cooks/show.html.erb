<% content_for(:title, '投稿詳細 | CamFoo') %>
<div class="show-image">
  <div class="bg-rgba">
    <h2>Recipe</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3 offset-1">
      <h4><%= @cook.name %></h4>
      <%= attachment_image_tag @cook, :image, :fill, 200, 200 %><br>
      <span>調理時間: <%= @cook.cooking_time %>分</span><br>
      <span>ジャンル: <%= @cook.cook_genre_i18n %></span><br>
      <span>調理道具: <%= @cook.cook_item_i18n %></span><br>
    </div>
    <div class="col-7 m-auto <%= @cook.id %>">
      <span>材料</span><br>
      <table class="table table-sm w-50 text-white">
        <thead>
          <tr>
            <th>食材・調味料</th>
            <th>分量</th>
          </tr>
        </thead>
        <tbody>
          <% @materials.each do |material| %>
          <tr>
            <td><%= material.material %></td>
            <td><%= material.qty %></td>
          </tr>
          <% end %><br>
        </tbody>
      </table>

      <span class="like-btn"><%= render "likes/like", obj: @cook %></span>
      <span class="bookmark-btn"><%= render "bookmarks/bookmark", obj: @cook %></span>

      <% if @cook.user == current_user %>
        <%= link_to "編集する", edit_cook_path(@cook), class: "btn btn-success text-white p-1" %>
        <%= link_to "削除する", cook_path(@cook), class: "text-white btn btn-danger p-1", method: :delete, data:{ confirm: '本当に削除して良いですか?',cancel: 'やめる',commit: '削除する'}, title: '削除確認' %>
      <% end %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
      <h4>作り方</h4>
      <%= @cook.cooking_method %>
    </div>
  </div>
</div>