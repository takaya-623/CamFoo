<% content_for(:title, 'ログイン | CamFoo') %>
<div class="login-image">
  <div class="bg-rgba">
    <h2>ログイン</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-10 offset-1 mx-auto text-center">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <div class="form-group login-form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: " text-center login-mobile" %>
          </div>
        </div>
        <div class="field">
          <div class="form-group login-form">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: " text-center login-mobile" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を保存する %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログインする", class: "login-mobile" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
