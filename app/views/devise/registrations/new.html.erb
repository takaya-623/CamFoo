<% content_for(:title, '会員登録 | CamFoo') %>
<div class="registration-image">
  <div class="bg-rgba">
    <h2>会員登録</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-10 offset-1 m-auto text-center">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
        <div class="form-group">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "性", class: "login-mobile text-center" %><br>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名", class: "login-mobile text-center" %><br>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "kana_last_name", placeholder: "セイ", class: "login-mobile text-center" %><br>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "kana_first_name", placeholder: "メイ", class: "login-mobile text-center" %><br>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login-mobile text-center" %><br>
        </div>
        <div class="form-group">
          <%= f.text_field :account, autofocus: true, autocomplete: "acount", placeholder: "アカウント名 ※5文字以上15文字以内", class: "login-mobile text-center" %><br>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード ※6文字以上必須", class: "login-mobile text-center" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "login-mobile text-center" %>
          <% if @minimum_password_length %><br>
          <% end %><br />
        </div>
        <div class="actions">
          <%= f.submit "登録する", class: "login-mobile text-center" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

