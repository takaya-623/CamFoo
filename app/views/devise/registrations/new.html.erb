<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "性" %><br>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %><br>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "kana_last_name", placeholder: "セイ" %><br>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "kana_first_name", placeholder: "メイ" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %><br>
    <%= f.text_field :acount, autofocus: true, autocomplete: "acount", placeholder: "アカウント名" %><br>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
    <% if @minimum_password_length %><br>
    <em>(6文字以上必須)</em>
    <% end %><br />
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
