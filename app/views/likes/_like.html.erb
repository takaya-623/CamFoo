<% if obj.liked_by?(current_user) %>
    <%= link_to cook_likes_path(obj), method: :delete, remote: true do %>
      <i class="fas fa-thumbs-up"></i> <%= obj.likes.count %>いいね
    <% end %>
  <% else %>
    <%= link_to cook_likes_path(obj), method: :post, remote: true do %>
      <i class="fas fa-thumbs-up"></i> <%= obj.likes.count %>いいね
    <% end %>
<% end %>