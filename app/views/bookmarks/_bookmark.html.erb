<% if obj.bookmarked_by?(current_user) %>
    <%= link_to cook_bookmarks_path(obj), method: :delete, remote: true, class: "text-white"  do %>
      <i class="fas fa-bookmark"></i> お気に入り解除
    <% end %>
  <% else %>
    <%= link_to cook_bookmarks_path(obj), method: :post, remote: true, class: "text-white"  do %>
      <i class="fas fa-bookmark"></i> お気に入り登録
    <% end %>
<% end %>